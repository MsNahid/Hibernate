<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!--        Postgresql Driver-->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>

        <!--        Url-->
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernate_db</property>

        <!--        User Name-->
        <property name="hibernate.connection.username">postgres</property>

        <!--        Password-->
        <property name="hibernate.connection.password">postgres</property>


        <!--        &lt;!&ndash; Connection settings &ndash;&gt;-->
        <!--        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>-->
        <!--        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/student</property>-->
        <!--        <property name="hibernate.connection.username">postgres</property>-->
        <!--        <property name="hibernate.connection.password">postgres</property>-->

        <!--                &lt;!&ndash; SQL dialect &ndash;&gt;-->
        <!--                <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>-->

        <!--        &lt;!&ndash; Print executed SQL to stdout &ndash;&gt;-->
        <property name="show_sql">true</property>

        <property name="format_sql">true</property>

        <!--        &lt;!&ndash; Update database on startup &ndash;&gt;-->
        <!--        <property name="hibernate.hbm2ddl.auto">update</property>-->

        <!--        &lt;!&ndash; Annotated entity classes &ndash;&gt;-->
